<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">#E33225</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="backgroundcolor">#F5F5F5</item>
        <item name="background">@drawable/background_flag</item>
        <item name="cardbackground">#FFFFFF</item>
        <item name="backgroundcolorconsult">#FB6F65</item>
        <item name="cardbackgroundtab">#FAFAFA</item>
        <item name="textcolor">#252525</item>
        <item name="textcolormain">@color/teal_200</item>
        <item name="textcolorquiz">@color/teal_900</item>
        <item name="tintcolor">#B6B6B6</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="loginandregcolortext">#ffffff</item>
        <item name="backgroundcolorsetting">#ffffff</item>
        <item name="backgroundcolorheader">@color/teal_200</item>
        <item name="nightmode">โหมดกลางวัน</item>
        <item name="textdialog">#686868</item>
        <item name="dialogbackgroundcolor">#FAFFFFFF</item>
        <item name="dialogboxcolor">#F2EAEAEA</item>

    </style>

    <!-- Base application theme. night mode -->
    <style name="darkTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">#171E26</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="backgroundcolor">#171E26</item>
        <item name="background">@drawable/background_flag_black</item>
        <item name="backgroundcolorconsult">#1F2630</item>
        <item name="cardbackground">#1F2630</item>
        <item name="cardbackgroundtab">#29313C</item>
        <item name="textcolor">#ffffff</item>
        <item name="textcolormain">@color/white</item>
        <item name="textcolorquiz">@color/white</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="loginandregcolortext">@color/teal_200</item>
        <item name="backgroundcolorsetting">#121117</item>
        <item name="backgroundcolorheader">#1F2630</item>
        <item name="nightmode">โหมดกลางคืน</item>
        <item name="textdialog">@color/white</item>
        <item name="dialogbackgroundcolor">#FA1F2630</item>
        <item name="dialogboxcolor">#CD151A22</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/teal_200</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="MyDatePicker" >
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/teal_200</item>
        <!-- Text Font -->
        <item name="android:fontFamily">@font/chub</item>
        <!-- TExt Size -->
        <item name="android:textSize">17dp</item>
    </style>

    <!--Popup animation style-->
    <style name="DialogAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <!--Navigation bar Bottom-->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/chub</item>
    </style>

    <!--Toolbar font change -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/chub</item>
    </style>

    <style name="ThemeGame" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
    <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

</resources>
