<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".Users.Consult.Fragment.ShowConsultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_roundlr"
            android:backgroundTint="?attr/cardbackground"
            android:elevation="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/chub"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:text="คำปรึกษาทั้งหมด"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="24sp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/search_bg"
            app:iconifiedByDefault="false"
            app:queryHint="ค้นหาคำปรึกษา..."
            app:searchIcon="@drawable/ic_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postsRecyclerview"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/non_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ไม่พบข้อมูล"
            android:textAlignment="center"
            android:fontFamily="@font/chub"
            android:textColor="?attr/textcolor"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:textSize="22sp"/>

    </LinearLayout>

</FrameLayout>