<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="?attr/cardbackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:src="@drawable/profile_image"
                            android:elevation="10dp"
                            app:civ_border_color="?attr/cardbackground"
                            app:civ_border_width="3dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView_Profile"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:src="@drawable/profile_image"
                            android:elevation="10dp"
                            app:civ_border_color="?attr/cardbackground"
                            app:civ_border_width="3dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/chub"
                        android:text="@string/upload_show"
                        android:textAlignment="center"
                        android:textColor="?attr/textcolor"
                        android:textSize="25sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="#C1C1C1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <Button
                            android:id="@+id/update1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/chub"
                            android:text="@string/upload_set"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <ProgressBar
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="10dp"
                            android:visibility="gone" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewBtn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="?attr/cardbackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <Button
                            android:id="@+id/cancel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/chub"
                            android:text="ย้อนกลับ"
                            android:textColor="?attr/textcolor"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- ProgressBar: Show"progressBar" Loading[%] -->
                    <ProgressBar
                        android:id="@+id/progressBar_splash"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:progress="50"
                        android:progressBackgroundTint="#A6A6A6"
                        android:progressTint="@color/teal_200" />

                    <!-- TextView: Show"TextView" -->
                    <TextView
                        android:id="@+id/valueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/chub"
                        android:text="กำลังอัปโหลดรูปโปรไฟล์ กรุณารอสักครู่... 0%"
                        android:textColor="?attr/textcolor"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>