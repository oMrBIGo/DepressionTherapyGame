<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="#72FFFFFF"
    android:elevation="6dp"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:padding="5dp"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- CircleImageView: Show profileIv -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:elevation="5dp"
            android:src="@drawable/profile_image"
            app:civ_border_color="?attr/cardbackground"
            app:civ_border_width="3dp" />

        <!-- CircleImageView: Show profileIv give from Firebase -> RealTime -> image/* ] -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            android:src="@drawable/profile_image"
            app:civ_border_color="?attr/cardbackground"
            app:civ_border_width="3dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chub"
            android:text=""
            android:hint="@string/Loading"
            android:textColor="@color/white"
            android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#0B6870"
                android:elevation="3dp"
                android:layout_margin="5dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chub"
                    android:text="@string/Loading"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chub"
                    android:text="@string/Loading"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>

    </LinearLayout>

</LinearLayout>
