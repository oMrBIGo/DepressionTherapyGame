<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <!-- LinearLayout: Group dialog -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView: ViewGroup dialog -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="?attr/dialogbackgroundcolor"
            card_view:cardCornerRadius="15dp">

            <!-- LinearLayout: ViewGroup -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/flag_transparent"
                android:gravity="center|top"
                android:orientation="vertical"
                android:padding="19dp">

                <!-- TextView: show tetris  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/chub"
                    android:text="รายละเอียด"
                    android:textColor="@color/teal_200"
                    android:textSize="25sp" />

                <!-- View: Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/teal_200" />

                <!-- ImageView: show tetris  -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/tetris_more" />

                <!-- TextView: show tetris -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/chub"
                    android:paddingTop="15dp"
                    android:text="@string/tetris_details_01"
                    android:textColor="?attr/textdialog"
                    android:textSize="15sp" />

                <!-- TextView: show tetris -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/chur"
                    android:text="@string/tetris_details_02"
                    android:textColor="?attr/textdialog"
                    android:textSize="15sp" />

                <!-- TextView: show tetris -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/chur"
                    android:text="@string/tetris_details_03"
                    android:textColor="?attr/textdialog"
                    android:textSize="15sp" />

                <!-- TextView: show tetris -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/chur"
                    android:text="@string/tetris_details_04"
                    android:textColor="?attr/textdialog"
                    android:textSize="15sp" />

                <!-- LinearLayout: ViewGroup button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Button: check preliminary agreement [reject] -->
                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_lower_white"
                        android:fontFamily="@font/chub"
                        android:text="ย้อนกลับ"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>