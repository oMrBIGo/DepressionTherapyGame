<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <!-- LinearLayout: Group dialog -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- LinearLayout: Group Depression -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- CardView: ViewGroup dialog -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="?attr/dialogbackgroundcolor"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp">

                <!-- LinearLayout: ViewGroup -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo_white" />

                    <!-- TextView: Show Title Depression -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/chub"
                        android:text="แบบประเมินด้วยตนเอง"
                        android:textAlignment="center"
                        android:textColor="?attr/textcolor"
                        android:textSize="22sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/teal_200" />

                    <!-- ScrollView: Show slide Description -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <!-- LinearLayout: Description -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- TextView: Show Title Description -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chur"
                                android:text="     แบบประเมินนี้เป็นเพียงการประเมินอาการ ด้วยตนเองเบื้องต้นเท่านั้น ไม่สามารถนำไปใช้อ้างอิงหรือใช้ประกอบเอกสารสำคัญได้"
                                android:textColor="?attr/textcolor"
                                android:textSize="18sp" />

                            <!-- TextView: Show Title Description -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chur"
                                android:text="      แบบประเมินนี้มาจากกรมสุขภาพจิต เป็นการประเมินอารมณ์ความรู้สึกของคุณ ในช่วง 2 สัปดาห์ที่ผ่านมา"
                                android:textColor="?attr/textcolor"
                                android:textSize="18sp" />

                            <!-- TextView: Show Title Description -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chur"
                                android:text="      เราขอแนะนำให้คุณตอบตามความเป็นจริง เพื่อให้ผลออกมาใกล้เคียงกับความเป็นจริงมากที่สุด"
                                android:textColor="?attr/textcolor"
                                android:textSize="18sp" />


                        </LinearLayout>

                    </ScrollView>

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_state_list_animator"
                        android:elevation="5dp"
                        android:fontFamily="@font/chub"
                        android:padding="5dp"
                        android:text="ตกลง"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>