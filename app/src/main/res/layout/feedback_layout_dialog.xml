<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="?attr/cardbackground"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/feedback_3d" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chub"
                android:text="ข้อเสนอแนะ"
                android:textAlignment="center"
                android:textColor="?attr/textcolor"
                android:textSize="25sp" />

            <!-- CardView Design -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp">

                <!--EditText: Input post title-->
                <EditText
                    android:id="@+id/pTitleEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardbackgroundtab"
                    android:fontFamily="@font/chub"
                    android:hint="หัวเรื่อง..."
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="?attr/textcolor"
                    android:textColorHint="?attr/textcolor"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <!-- CardView Design -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp">

                <!--EditText: Input post description-->
                <EditText
                    android:id="@+id/pDescriptionEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cardbackgroundtab"
                    android:fontFamily="@font/chur"
                    android:gravity="start"
                    android:hint="คำอธิบาย..."
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="3"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="?attr/textcolor"
                    android:textColorHint="?attr/textcolor"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <!-- btn updateProfile -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                card_view:cardBackgroundColor="@color/green"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp">

                <Button
                    android:id="@+id/pUploadBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/flag_transparent"
                    android:fontFamily="@font/chub"
                    android:text="ส่งข้อเสนอแนะ"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                card_view:cardBackgroundColor="#FFC107"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="2dp">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/flag_transparent"
                    android:fontFamily="@font/chub"
                    android:text="@string/update_cancel"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
