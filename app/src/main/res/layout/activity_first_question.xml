<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".Users.FirstTimeDep.FirstQuestionActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:padding="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/activity_firstquest_header" />

        <TextView
            android:id="@+id/QuizNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/chub"
            android:hint="@string/Loading"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textColorHint="?attr/tintcolor"
            android:textSize="25sp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardBackgroundColor="?attr/cardbackground"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="15dp">
                <!-- quiz -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    card_view:cardBackgroundColor="?attr/cardbackgroundtab"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="2dp">

                    <TextView
                        android:id="@+id/QuizQuest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/chub"
                        android:gravity="center"
                        android:hint="@string/Loading"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLines="7"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="?attr/textcolor"
                        android:textSize="20sp"
                        tools:ignore="TextViewEdits" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chub"
                    android:text="@string/anwer_click"
                    android:textColor="?attr/textcolor"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <!-- option 1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewBtn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        card_view:cardBackgroundColor="?attr/cardbackgroundtab"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="2dp">

                        <Button
                            android:id="@+id/option1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:backgroundTint="?attr/cardbackgroundtab"
                            android:backgroundTintMode="screen"
                            android:fontFamily="@font/chub"
                            android:padding="5dp"
                            android:text="@string/Loading"
                            android:textColor="?attr/textcolor"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- option 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewBtn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        card_view:cardBackgroundColor="?attr/cardbackgroundtab"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="2dp">

                        <Button
                            android:id="@+id/option2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:backgroundTint="?attr/cardbackgroundtab"
                            android:backgroundTintMode="screen"
                            android:fontFamily="@font/chub"
                            android:padding="5dp"
                            android:text="@string/Loading"
                            android:textColor="?attr/textcolor"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- option 3 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewBtn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        card_view:cardBackgroundColor="?attr/cardbackgroundtab"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="2dp">

                        <Button
                            android:id="@+id/option3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:backgroundTint="?attr/cardbackgroundtab"
                            android:backgroundTintMode="screen"
                            android:fontFamily="@font/chub"
                            android:padding="5dp"
                            android:text="@string/Loading"
                            android:textColor="?attr/textcolor"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>

                    <!-- option 4 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewBtn4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        card_view:cardBackgroundColor="?attr/cardbackgroundtab"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="2dp">

                        <Button
                            android:id="@+id/option4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:backgroundTint="?attr/cardbackgroundtab"
                            android:backgroundTintMode="screen"
                            android:fontFamily="@font/chub"
                            android:padding="5dp"
                            android:text="@string/Loading"
                            android:textColor="?attr/textcolor"
                            android:textSize="15sp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>